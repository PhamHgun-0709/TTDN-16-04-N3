<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Loại văn bản mẫu -->
        <record id="loai_van_ban_cong_van" model="loai.van.ban">
            <field name="ma_loai">CV</field>
            <field name="ten_loai">Công văn</field>
            <field name="mo_ta">Công văn hành chính</field>
        </record>

        <record id="loai_van_ban_quyet_dinh" model="loai.van.ban">
            <field name="ma_loai">QD</field>
            <field name="ten_loai">Quyết định</field>
            <field name="mo_ta">Quyết định hành chính</field>
        </record>

        <record id="loai_van_ban_thong_bao" model="loai.van.ban">
            <field name="ma_loai">TB</field>
            <field name="ten_loai">Thông báo</field>
            <field name="mo_ta">Thông báo nội bộ</field>
        </record>

        <record id="loai_van_ban_ke_hoach" model="loai.van.ban">
            <field name="ma_loai">KH</field>
            <field name="ten_loai">Kế hoạch</field>
            <field name="mo_ta">Kế hoạch công tác</field>
        </record>

        <record id="loai_van_ban_bao_cao" model="loai.van.ban">
            <field name="ma_loai">BC</field>
            <field name="ten_loai">Báo cáo</field>
            <field name="mo_ta">Báo cáo công tác</field>
        </record>

        <!-- Sequence cho văn bản đến -->
        <record id="seq_van_ban_den" model="ir.sequence">
            <field name="name">Văn bản đến</field>
            <field name="code">van.ban.den</field>
            <field name="prefix">VBĐ/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence cho văn bản đi -->
        <record id="seq_van_ban_di" model="ir.sequence">
            <field name="name">Văn bản đi</field>
            <field name="code">van.ban.di</field>
            <field name="prefix">VBĐi/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>

    <data>
        <!-- Văn bản đến mẫu -->
        <record id="van_ban_den_1" model="van.ban.den">
            <field name="so_ky_hieu">123/CV-UBND</field>
            <field name="ngay_den" eval="(datetime.now() - timedelta(days=5)).strftime('%Y-%m-%d')"/>
            <field name="ngay_ban_hanh" eval="(datetime.now() - timedelta(days=7)).strftime('%Y-%m-%d')"/>
            <field name="loai_van_ban_id" ref="loai_van_ban_cong_van"/>
            <field name="trich_yeu">V/v triển khai công tác phòng chống dịch Covid-19</field>
            <field name="noi_gui">Ủy ban nhân dân tỉnh</field>
            <field name="noi_dung">Đề nghị các đơn vị triển khai công tác phòng chống dịch Covid-19 theo quy định...</field>
            <field name="trang_thai">chua_xu_ly</field>
        </record>

        <record id="van_ban_den_2" model="van.ban.den">
            <field name="so_ky_hieu">456/QD-BTC</field>
            <field name="ngay_den" eval="(datetime.now() - timedelta(days=3)).strftime('%Y-%m-%d')"/>
            <field name="ngay_ban_hanh" eval="(datetime.now() - timedelta(days=4)).strftime('%Y-%m-%d')"/>
            <field name="loai_van_ban_id" ref="loai_van_ban_quyet_dinh"/>
            <field name="trich_yeu">V/v phê duyệt dự toán năm 2025</field>
            <field name="noi_gui">Bộ Tài chính</field>
            <field name="noi_dung">Phê duyệt dự toán ngân sách năm 2025 cho các đơn vị trực thuộc...</field>
            <field name="trang_thai">dang_xu_ly</field>
        </record>

        <!-- Văn bản đi mẫu -->
        <record id="van_ban_di_1" model="van.ban.di">
            <field name="so_ky_hieu">100/CV-VP</field>
            <field name="ngay_ban_hanh" eval="datetime.now().strftime('%Y-%m-%d')"/>
            <field name="loai_van_ban_id" ref="loai_van_ban_cong_van"/>
            <field name="trich_yeu">V/v báo cáo kết quả thực hiện công việc tháng 12</field>
            <field name="noi_nhan">Sở Nội vụ</field>
            <field name="noi_dung">Kính gửi báo cáo kết quả thực hiện công việc tháng 12/2025...</field>
            <field name="trang_thai">da_ban_hanh</field>
        </record>

        <record id="van_ban_di_2" model="van.ban.di">
            <field name="so_ky_hieu">200/KH-VP</field>
            <field name="ngay_ban_hanh" eval="(datetime.now() + timedelta(days=2)).strftime('%Y-%m-%d')"/>
            <field name="loai_van_ban_id" ref="loai_van_ban_ke_hoach"/>
            <field name="trich_yeu">Kế hoạch tổ chức Hội nghị tổng kết năm 2025</field>
            <field name="noi_nhan">Các phòng ban</field>
            <field name="noi_dung">Kế hoạch tổ chức hội nghị tổng kết năm 2025 và triển khai nhiệm vụ năm 2026...</field>
            <field name="trang_thai">cho_duyet</field>
        </record>
    </data>
</odoo>
