<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_loai_van_ban_form" model="ir.ui.view">
        <field name="name">loai.van.ban.form</field>
        <field name="model">loai.van.ban</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="ten_loai"/>
                            <field name="ma_loai"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="mo_ta"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_loai_van_ban_list" model="ir.ui.view">
        <field name="name">loai.van.ban.list</field>
        <field name="model">loai.van.ban</field>
        <field name="arch" type="xml">
            <list>
                <field name="ma_loai"/>
                <field name="ten_loai"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_loai_van_ban" model="ir.actions.act_window">
        <field name="name">Loại văn bản</field>
        <field name="res_model">loai.van.ban</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
