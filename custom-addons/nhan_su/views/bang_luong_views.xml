<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bang_luong_tree" model="ir.ui.view">
        <field name="name">nhan.su.bang.luong.tree</field>
        <field name="model">nhan.su.bang.luong</field>
        <field name="arch" type="xml">
            <list decoration-info="trang_thai=='nhap'" decoration-warning="trang_thai=='cho_duyet'" decoration-success="trang_thai=='da_duyet'" decoration-muted="trang_thai=='da_chi'">
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="so_nhan_vien"/>
                <field name="tong_quy_luong" sum="Tổng quỹ"/>
                <field name="nguoi_lap_id"/>
                <field name="nguoi_duyet_id"/>
                <field name="trang_thai"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bang_luong_form" model="ir.ui.view">
        <field name="name">nhan.su.bang.luong.form</field>
        <field name="model">nhan.su.bang.luong</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_lay_du_lieu" string="Lấy dữ liệu" type="object" 
                            class="oe_highlight"/>
                    <button name="action_tinh_luong" string="Tính lương" type="object" 
                            class="oe_highlight"/>
                    <button name="action_trinh_duyet" string="Trình duyệt" type="object" 
                            class="oe_highlight"/>
                    <button name="action_duyet" string="Duyệt" type="object" 
                            class="oe_highlight"/>
                    <button name="action_chi_luong" string="Chi lương" type="object" 
                            class="oe_highlight"/>
                    <button name="action_huy" string="Hủy" type="object"/>
                    <field name="trang_thai" widget="statusbar" 
                           statusbar_visible="nhap,cho_duyet,da_duyet,da_chi"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h3>Kỳ lương: Tháng <field name="thang" class="oe_inline"/> / <field name="nam" class="oe_inline"/></h3>
                    </div>
                    <group name="stats_dashboard" col="1">
                        <div class="row" style="margin: 10px 0;">
                            <div class="col-md-3" style="text-align: center; padding: 15px; background: #e3f2fd; border-radius: 5px; margin: 5px;">
                                <div style="font-size: 28px; font-weight: bold; color: #1976d2;">
                                    <field name="so_nhan_vien" nolabel="1"/>
                                </div>
                                <div style="color: #666;">Nhân viên</div>
                            </div>
                            <div class="col-md-3" style="text-align: center; padding: 15px; background: #fff3e0; border-radius: 5px; margin: 5px;">
                                <div style="font-size: 28px; font-weight: bold; color: #f57c00;">
                                    <field name="tong_thu_nhap" widget="monetary" nolabel="1"/>
                                </div>
                                <div style="color: #666;">Tổng thu nhập</div>
                            </div>
                            <div class="col-md-3" style="text-align: center; padding: 15px; background: #ffebee; border-radius: 5px; margin: 5px;">
                                <div style="font-size: 28px; font-weight: bold; color: #c62828;">
                                    <field name="tong_khau_tru" widget="monetary" nolabel="1"/>
                                </div>
                                <div style="color: #666;">Tổng khấu trừ</div>
                            </div>
                            <div class="col-md-3" style="text-align: center; padding: 15px; background: #e8f5e9; border-radius: 5px; margin: 5px;">
                                <div style="font-size: 32px; font-weight: bold; color: #2e7d32;">
                                    <field name="tong_quy_luong" widget="monetary" nolabel="1"/>
                                </div>
                                <div style="color: #666; font-weight: bold;">QUỸ LƯƠNG</div>
                            </div>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="thang"/>
                            <field name="nam"/>
                        </group>
                        <group>
                            <field name="nguoi_lap_id"/>
                            <field name="ngay_lap"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết lương">
                            <field name="chi_tiet_luong_ids">
                                <list editable="bottom">
                                    <field name="nhan_vien_id"/>
                                    <field name="phong_ban_id"/>
                                    <field name="chuc_vu_id"/>
                                    <field name="cong_quy_doi"/>
                                    <field name="luong_co_ban"/>
                                    <field name="thu_nhap"/>
                                    <field name="tong_khau_tru"/>
                                    <field name="thuc_linh"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Thống kê">
                            <group>
                                <group string="Thu nhập">
                                    <field name="tong_thu_nhap" widget="monetary"/>
                                    <field name="so_nhan_vien" string="Số nhân viên"/>
                                </group>
                                <group string="Khấu trừ và Thực lĩnh">
                                    <field name="tong_khau_tru" widget="monetary"/>
                                    <field name="tong_thuc_linh" widget="monetary" 
                                           style="font-size:18px;font-weight:bold;color:green;"/>
                                    <field name="tong_quy_luong" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Thông tin duyệt">
                            <group>
                                <group string="Người lập">
                                    <field name="nguoi_lap_id"/>
                                    <field name="ngay_lap"/>
                                </group>
                                <group string="Người duyệt">
                                    <field name="nguoi_duyet_id"/>
                                    <field name="ngay_duyet"/>
                                </group>
                            </group>
                            <group>
                                <group string="Người chi lương">
                                    <field name="nguoi_chi_id"/>
                                    <field name="ngay_chi"/>
                                </group>
                                <group/>
                            </group>
                        </page>
                        <page string="Ghi chú">
                            <field name="ghi_chu" nolabel="1" placeholder="Nhập ghi chú về bảng lương..."/>
                        </page>
                        <page string="Thảo luận">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_bang_luong_search" model="ir.ui.view">
        <field name="name">nhan.su.bang.luong.search</field>
        <field name="model">nhan.su.bang.luong</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="nguoi_lap_id"/>
                <filter string="Nháp" name="nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                <filter string="Đã chi" name="da_chi" domain="[('trang_thai', '=', 'da_chi')]"/>
                <separator/>
                <filter string="Nhóm theo Năm" name="group_nam" context="{'group_by':'nam'}"/>
                <filter string="Nhóm theo Tháng" name="group_thang" context="{'group_by':'thang'}"/>
                <filter string="Nhóm theo Người lập" name="group_nguoi_lap" context="{'group_by':'nguoi_lap_id'}"/>
                <filter string="Nhóm theo Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_bang_luong_graph" model="ir.ui.view">
        <field name="name">nhan.su.bang.luong.graph</field>
        <field name="model">nhan.su.bang.luong</field>
        <field name="arch" type="xml">
            <graph string="Thống kê lương" type="bar" stacked="False">
                <field name="thang"/>
                <field name="tong_quy_luong" type="measure"/>
                <field name="tong_thu_nhap" type="measure"/>
                <field name="tong_khau_tru" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_bang_luong_pivot" model="ir.ui.view">
        <field name="name">nhan.su.bang.luong.pivot</field>
        <field name="model">nhan.su.bang.luong</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích lương">
                <field name="nam" type="row"/>
                <field name="thang" type="row"/>
                <field name="so_nhan_vien" type="measure"/>
                <field name="tong_thu_nhap" type="measure"/>
                <field name="tong_khau_tru" type="measure"/>
                <field name="tong_quy_luong" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bang_luong" model="ir.actions.act_window">
        <field name="name">Bảng lương</field>
        <field name="res_model">nhan.su.bang.luong</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="context">{'search_default_nam_nay': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bảng lương mới
            </p>
            <p>
                Nhấn nút <b>Tạo</b> để tạo bảng lương cho tháng mới.
            </p>
        </field>
    </record>
</odoo>


