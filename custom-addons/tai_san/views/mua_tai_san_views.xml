<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="view_mua_tai_san_form" model="ir.ui.view">
        <field name="name">tai.san.mua.tai.san.form</field>
        <field name="model">tai.san.mua.tai.san</field>
        <field name="arch" type="xml">
            <form string="Mua tài sản">
                <header>
                    <button name="action_xac_nhan_da_mua" string="Xác nhận đã mua" 
                            type="object" class="oe_highlight"
                            invisible="trang_thai != 'nhap'"/>
                    <button name="action_tao_tai_san" string="Tạo tài sản" 
                            type="object" class="oe_highlight"
                            invisible="trang_thai != 'da_mua'"/>
                    <button name="action_huy" string="Hủy" type="object"
                            invisible="trang_thai in ['da_tao_tai_san', 'huy']"/>
                    <field name="trang_thai" widget="statusbar" 
                           statusbar_visible="nhap,da_mua,da_tao_tai_san"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_tai_san)d" type="action"
                                class="oe_stat_button" icon="fa-cubes"
                                context="{'search_default_mua_tai_san_id': id}">
                            <field name="so_tai_san_da_tao" widget="statinfo" string="Tài sản"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Thông tin chung">
                            <field name="name"/>
                            <field name="ung_tien_id" options="{'no_create': True}"/>
                            <field name="de_xuat_id" readonly="1"/>
                            <field name="ngay_mua"/>
                        </group>
                        <group string="Nhà cung cấp">
                            <field name="nha_cung_cap"/>
                            <field name="dia_chi_ncc"/>
                            <field name="so_dien_thoai_ncc"/>
                        </group>
                    </group>
                    
                    <group string="Thông tin tài sản">
                        <group>
                            <field name="ten_tai_san"/>
                            <field name="loai_tai_san"/>
                            <field name="so_luong"/>
                        </group>
                        <group>
                            <field name="don_gia" widget="monetary" options="{'currency_field': False}"/>
                            <field name="thanh_tien" widget="monetary" options="{'currency_field': False}"/>
                            <field name="thue_vat"/>
                            <field name="tien_thue" widget="monetary" options="{'currency_field': False}"/>
                            <field name="tong_tien" widget="monetary" options="{'currency_field': False}" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                    
                    <group string="Bảo hành">
                        <group>
                            <field name="thoi_gian_bao_hanh"/>
                            <field name="ngay_het_bao_hanh"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tài sản đã tạo" invisible="so_tai_san_da_tao == 0">
                            <field name="tai_san_ids" context="{'default_loai_tai_san': loai_tai_san}"/>
                        </page>
                        <page string="Ghi chú">
                            <field name="ghi_chu" placeholder="Nhập ghi chú..." nolabel="1"/>
                        </page>
                        <page string="Thảo luận">
                            <field name="message_follower_ids" widget="mail_followers" nolabel="1"/>
                            <field name="activity_ids" widget="mail_activity" nolabel="1"/>
                            <field name="message_ids" widget="mail_thread" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_mua_tai_san_tree" model="ir.ui.view">
        <field name="name">tai.san.mua.tai.san.tree</field>
        <field name="model">tai.san.mua.tai.san</field>
        <field name="arch" type="xml">
            <list string="Mua tài sản" decoration-success="trang_thai == 'da_tao_tai_san'" 
                  decoration-info="trang_thai == 'da_mua'" decoration-muted="trang_thai == 'huy'">
                <field name="name"/>
                <field name="ngay_mua"/>
                <field name="nha_cung_cap"/>
                <field name="ten_tai_san"/>
                <field name="loai_tai_san"/>
                <field name="so_luong"/>
                <field name="tong_tien" widget="monetary"/>
                <field name="so_tai_san_da_tao"/>
                <field name="trang_thai"/>
            </list>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_mua_tai_san_search" model="ir.ui.view">
        <field name="name">tai.san.mua.tai.san.search</field>
        <field name="model">tai.san.mua.tai.san</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm mua tài sản">
                <field name="name"/>
                <field name="nha_cung_cap"/>
                <field name="ten_tai_san"/>
                <separator/>
                <filter string="Nháp" name="nhap" domain="[('trang_thai','=','nhap')]"/>
                <filter string="Đã mua" name="da_mua" domain="[('trang_thai','=','da_mua')]"/>
                <filter string="Đã tạo tài sản" name="da_tao_tai_san" domain="[('trang_thai','=','da_tao_tai_san')]"/>
                <filter string="Đã hủy" name="huy" domain="[('trang_thai','=','huy')]"/>
                <separator/>
                <filter string="Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
                <filter string="Loại tài sản" name="group_loai" context="{'group_by':'loai_tai_san'}"/>
                <filter string="Nhà cung cấp" name="group_ncc" context="{'group_by':'nha_cung_cap'}"/>
                <filter string="Ngày mua" name="group_ngay" context="{'group_by':'ngay_mua'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mua_tai_san" model="ir.actions.act_window">
        <field name="name">Mua tài sản</field>
        <field name="res_model">tai.san.mua.tai.san</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_da_mua': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo hóa đơn mua tài sản
            </p>
            <p>
                Ghi nhận việc mua tài sản từ nhà cung cấp sau khi ứng tiền được duyệt.
            </p>
        </field>
    </record>

</odoo>
