<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view -->
    <record id="view_thay_the_tai_san_tree" model="ir.ui.view">
        <field name="name">tai.san.thay.the.tree</field>
        <field name="model">tai.san.thay.the</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="ngay_de_xuat"/>
                <field name="tai_san_cu_id"/>
                <field name="ten_tai_san_moi"/>
                <field name="hinh_thuc_xu_ly"/>
                <field name="trang_thai"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_thay_the_tai_san_form" model="ir.ui.view">
        <field name="name">tai.san.thay.the.form</field>
        <field name="model">tai.san.thay.the</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_gui_duyet" string="Gửi duyệt" type="object" class="oe_highlight"/>
                    <button name="action_duyet" string="Duyệt" type="object" class="oe_highlight"/>
                    <button name="action_tu_choi" string="Từ chối" type="object"/>
                    <button name="action_hoan_thanh" string="Hoàn thành" type="object" class="oe_highlight"/>
                    <field name="trang_thai" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ngay_de_xuat"/>
                            <field name="nhan_vien_id"/>
                            <field name="phong_ban_id"/>
                        </group>
                        <group>
                            <field name="tai_san_cu_id"/>
                            <field name="tinh_trang_tai_san_cu"/>
                            <field name="hinh_thuc_xu_ly"/>
                            <field name="gia_tri_xu_ly"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ten_tai_san_moi"/>
                            <field name="loai_tai_san_moi"/>
                            <field name="gia_tri_du_kien"/>
                            <field name="tai_san_moi_id"/>
                        </group>
                        <group>
                            <field name="ngay_thay_the"/>
                        </group>
                    </group>
                    <group>
                        <field name="ly_do" placeholder="Lý do thay thế..."/>
                    </group>
                    <notebook>
                        <page string="Thảo luận">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_thay_the_tai_san" model="ir.actions.act_window">
        <field name="name">Thay thế tài sản</field>
        <field name="res_model">tai.san.thay.the</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
