<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_phieu_chi_tree" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.tree</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <list decoration-info="trang_thai=='nhap'" 
                  decoration-warning="trang_thai=='cho_duyet'"
                  decoration-success="trang_thai=='da_chi'"
                  decoration-muted="trang_thai=='huy'"
                  decoration-danger="co_canh_bao and muc_do_rui_ro in ('cao', 'nghiem_trong')"
                  multi_edit="1">
                <field name="name"/>
                <field name="ngay_lap"/>
                <field name="doi_tuong_id"/>
                <field name="ly_do_chi"/>
                <field name="loai_chi"/>
                <field name="so_tien" sum="Tổng"/>
                <field name="hinh_thuc_thanh_toan"/>
                <field name="co_canh_bao" column_invisible="1"/>
                <field name="muc_do_rui_ro" column_invisible="1"/>
                <field name="so_canh_bao" string="⚠️" 
                       widget="badge"
                       decoration-danger="muc_do_rui_ro in ('cao', 'nghiem_trong')"
                       decoration-warning="muc_do_rui_ro == 'trung_binh'"
                       optional="show"/>
                <field name="trang_thai" 
                       decoration-info="trang_thai=='nhap'"
                       decoration-warning="trang_thai=='cho_duyet'"
                       decoration-success="trang_thai in ('da_duyet','da_chi')"
                       widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Search View với Filter và Group By -->
    <record id="view_phieu_chi_search" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.search</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu chi">
                <field name="name"/>
                <field name="doi_tuong_id"/>
                <field name="ly_do_chi"/>
                <field name="nguoi_lap_id"/>
                
                <filter string="Nháp" name="nhap" domain="[('trang_thai','=','nhap')]"/>
                <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai','=','cho_duyet')]"/>
                <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai','=','da_duyet')]"/>
                <filter string="Đã chi" name="da_chi" domain="[('trang_thai','=','da_chi')]"/>
                
                <filter string="Tiền mặt" name="tien_mat" domain="[('hinh_thuc_thanh_toan','=','tien_mat')]"/>
                <filter string="Chuyển khoản" name="chuyen_khoan" domain="[('hinh_thuc_thanh_toan','=','chuyen_khoan')]"/>
                
                <filter string="Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
                <filter string="Loại chi" name="group_loai_chi" context="{'group_by':'loai_chi'}"/>
                <filter string="Hình thức" name="group_hinh_thuc" context="{'group_by':'hinh_thuc_thanh_toan'}"/>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_phieu_chi_graph" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.graph</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <graph string="Thống kê chi" type="bar">
                <field name="ngay_lap" interval="month"/>
                <field name="so_tien" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_phieu_chi_pivot" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.pivot</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích chi">
                <field name="ngay_lap" interval="month" type="row"/>
                <field name="loai_chi" type="row"/>
                <field name="so_tien" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_phieu_chi_kanban" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.kanban</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <kanban default_group_by="trang_thai" class="o_kanban_small_column">
                <field name="name"/>
                <field name="doi_tuong_id"/>
                <field name="so_tien"/>
                <field name="ngay_lap"/>
                <field name="loai_chi"/>
                <field name="hinh_thuc_thanh_toan"/>
                <field name="trang_thai"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="doi_tuong_id"/>
                                    </span>
                                </div>
                                <span class="badge badge-pill" t-att-class="{'badge-info': record.trang_thai.raw_value == 'nhap', 'badge-warning': record.trang_thai.raw_value == 'cho_duyet', 'badge-primary': record.trang_thai.raw_value == 'da_duyet', 'badge-success': record.trang_thai.raw_value == 'da_chi'}">
                                    <field name="trang_thai"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="text-muted">Số tiền: </span>
                                        <strong><field name="so_tien" widget="monetary"/></strong>
                                    </div>
                                    <div class="col-12">
                                        <span class="text-muted"><field name="loai_chi"/></span>
                                        <span class="float-right"><i class="fa fa-calendar"/> <field name="ngay_lap"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_phieu_chi_form" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.chi.form</field>
        <field name="model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_gui_duyet" string="Gửi duyệt" type="object" class="oe_highlight"/>
                    <button name="action_duyet" string="Duyệt" type="object" class="oe_highlight"/>
                    <button name="action_chi_tien" string="Chi tiền" type="object" class="oe_highlight"/>
                    <button name="action_huy" string="Hủy" type="object"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,cho_duyet,da_duyet,da_chi"/>
                </header>
                <sheet>
                    <!-- Fraud Alert Banner -->
                    <div class="alert alert-danger" role="alert" invisible="not co_canh_bao or muc_do_rui_ro not in ('cao', 'nghiem_trong')">
                        <h4 class="alert-heading">
                            <i class="fa fa-exclamation-triangle"/> Cảnh báo: Phát hiện gian lận!
                        </h4>
                        <p class="mb-0">
                            Phiếu chi này có <strong><field name="so_canh_bao" nolabel="1"/> cảnh báo</strong> với mức độ 
                            <strong class="text-uppercase"><field name="muc_do_rui_ro" nolabel="1"/></strong>.
                            Vui lòng kiểm tra kỹ trước khi duyệt!
                        </p>
                    </div>
                    
                    <div class="alert alert-warning" role="alert" invisible="not co_canh_bao or muc_do_rui_ro != 'trung_binh'">
                        <p class="mb-0">
                            <i class="fa fa-info-circle"/> Phiếu chi có <strong><field name="so_canh_bao" nolabel="1"/> cảnh báo</strong> 
                            mức độ trung bình. Nên xem xét kỹ.
                        </p>
                    </div>
                    
                    <field name="co_canh_bao" invisible="1"/>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ngay_lap"/>
                            <field name="nguoi_lap_id"/>
                        </group>
                        <group>
                            <field name="doi_tuong_id"/>
                            <field name="nguoi_nhan"/>
                            <field name="ngay_chi"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ly_do_chi"/>
                            <field name="loai_chi"/>
                        </group>
                        <group>
                            <field name="so_tien"/>
                            <field name="hinh_thuc_thanh_toan"/>
                            <field name="tai_khoan_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="ghi_chu" placeholder="Ghi chú..." nolabel="1"/>
                        </page>
                        <page string="⚠️ Cảnh báo gian lận" invisible="not co_canh_bao" name="fraud_alerts">
                            <field name="canh_bao_gian_lan_ids" nolabel="1">
                                <list>
                                    <field name="ma_canh_bao"/>
                                    <field name="loai_gian_lan"/>
                                    <field name="muc_do_nguy_hiem" 
                                           decoration-danger="muc_do_nguy_hiem in ('cao', 'nghiem_trong')"
                                           decoration-warning="muc_do_nguy_hiem == 'trung_binh'"
                                           widget="badge"/>
                                    <field name="mo_ta"/>
                                    <field name="hybrid_score" string="Điểm nghi ngờ"/>
                                    <field name="trang_thai" widget="badge"/>
                                    <field name="ngay_phat_hien"/>
                                </list>
                            </field>
                        </page>
                        <page string="Thảo luận">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_phieu_chi" model="ir.actions.act_window">
        <field name="name">Phiếu chi</field>
        <field name="res_model">tai.chinh.ke.toan.phieu.chi</field>
        <field name="view_mode">list,kanban,form,graph,pivot</field>
        <field name="search_view_id" ref="view_phieu_chi_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu chi đầu tiên
            </p>
            <p>
                Phiếu chi được sử dụng để ghi nhận các khoản chi tiêu của công ty.
            </p>
        </field>
    </record>
</odoo>

