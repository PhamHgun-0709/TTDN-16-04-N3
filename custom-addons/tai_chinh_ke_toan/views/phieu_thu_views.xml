<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_phieu_thu_kanban" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.kanban</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="ngay_lap"/>
                <field name="doi_tuong_id"/>
                <field name="so_tien"/>
                <field name="trang_thai"/>
                <field name="loai_thu"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span class="text-muted"><field name="doi_tuong_id"/></span>
                                </div>
                                <span class="float-end">
                                    <field name="trang_thai" widget="badge" 
                                           decoration-info="trang_thai == 'nhap'" 
                                           decoration-warning="trang_thai == 'cho_duyet'"
                                           decoration-success="trang_thai == 'da_duyet' or trang_thai == 'da_thu'"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="ly_do_thu"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <strong><field name="so_tien" widget="monetary"/></strong>
                                    <br/>
                                    <span class="text-muted"><field name="ngay_lap"/></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="loai_thu" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_phieu_thu_tree" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.tree</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <list decoration-info="trang_thai=='nhap'" 
                  decoration-warning="trang_thai=='cho_duyet'"
                  decoration-success="trang_thai=='da_thu'"
                  decoration-muted="trang_thai=='huy'"
                  multi_edit="1">
                <field name="name"/>
                <field name="ngay_lap"/>
                <field name="doi_tuong_id"/>
                <field name="ly_do_thu"/>
                <field name="loai_thu"/>
                <field name="so_tien" sum="Tổng"/>
                <field name="hinh_thuc_thanh_toan"/>
                <field name="trang_thai" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_phieu_thu_search" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.search</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu thu">
                <field name="name"/>
                <field name="doi_tuong_id"/>
                <field name="ly_do_thu"/>
                
                <filter string="Nháp" name="nhap" domain="[('trang_thai','=','nhap')]"/>
                <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai','=','cho_duyet')]"/>
                <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai','=','da_duyet')]"/>
                <filter string="Đã thu" name="da_thu" domain="[('trang_thai','=','da_thu')]"/>
                
                <filter string="Tiền mặt" name="tien_mat" domain="[('hinh_thuc_thanh_toan','=','tien_mat')]"/>
                <filter string="Chuyển khoản" name="chuyen_khoan" domain="[('hinh_thuc_thanh_toan','=','chuyen_khoan')]"/>
                
                <filter string="Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
                <filter string="Loại thu" name="group_loai_thu" context="{'group_by':'loai_thu'}"/>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_phieu_thu_graph" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.graph</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <graph string="Thống kê thu" type="bar">
                <field name="ngay_lap" interval="month"/>
                <field name="so_tien" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_phieu_thu_pivot" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.pivot</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích thu">
                <field name="ngay_lap" interval="month" type="row"/>
                <field name="loai_thu" type="row"/>
                <field name="so_tien" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_phieu_thu_form" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.phieu.thu.form</field>
        <field name="model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_gui_duyet" string="Gửi duyệt" type="object" class="oe_highlight"/>
                    <button name="action_duyet" string="Duyệt" type="object" class="oe_highlight"/>
                    <button name="action_thu_tien" string="Thu tiền" type="object" class="oe_highlight"/>
                    <button name="action_huy" string="Hủy" type="object"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,cho_duyet,da_duyet,da_thu"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ngay_lap"/>
                            <field name="nguoi_lap_id"/>
                        </group>
                        <group>
                            <field name="doi_tuong_id"/>
                            <field name="nguoi_nop"/>
                            <field name="ngay_thu"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ly_do_thu"/>
                            <field name="loai_thu"/>
                        </group>
                        <group>
                            <field name="so_tien"/>
                            <field name="hinh_thuc_thanh_toan"/>
                            <field name="tai_khoan_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="ghi_chu" placeholder="Ghi chú..." nolabel="1"/>
                        </page>
                        <page string="Thảo luận">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_phieu_thu" model="ir.actions.act_window">
        <field name="name">Phiếu thu</field>
        <field name="res_model">tai.chinh.ke.toan.phieu.thu</field>
        <field name="view_mode">list,kanban,form,graph,pivot</field>
        <field name="search_view_id" ref="view_phieu_thu_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu thu đầu tiên
            </p>
            <p>
                Phiếu thu được sử dụng để ghi nhận các khoản thu của công ty.
            </p>
        </field>
    </record>
</odoo>

