<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dong_khau_hao_tree" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.dong.khau.hao.tree</field>
        <field name="model">tai.chinh.ke.toan.dong.khau.hao</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="tai_san_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="ngay_khau_hao"/>
                <field name="so_tien_khau_hao" sum="Tổng"/>
                <field name="trang_thai"/>
            </list>
        </field>
    </record>

    <record id="view_dong_khau_hao_form" model="ir.ui.view">
        <field name="name">tai.chinh.ke.toan.dong.khau.hao.form</field>
        <field name="model">tai.chinh.ke.toan.dong.khau.hao</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_ghi_nhan" string="Ghi nhận" type="object" class="oe_highlight"/>
                    <button name="action_huy" string="Hủy" type="object"/>
                    <field name="trang_thai" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="khau_hao_id"/>
                            <field name="tai_san_id"/>
                        </group>
                        <group>
                            <field name="thang"/>
                            <field name="nam"/>
                            <field name="ngay_khau_hao"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="so_tien_khau_hao"/>
                            <field name="gia_tri_con_lai"/>
                        </group>
                        <group>
                            <field name="tai_khoan_no"/>
                            <field name="tai_khoan_co"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="ghi_chu" placeholder="Ghi chú..." nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dong_khau_hao" model="ir.actions.act_window">
        <field name="name">Dòng khấu hao</field>
        <field name="res_model">tai.chinh.ke.toan.dong.khau.hao</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

