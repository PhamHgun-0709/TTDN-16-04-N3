<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Cảnh báo gian lận -->
    <record id="seq_canh_bao_gian_lan" model="ir.sequence">
        <field name="name">Cảnh báo gian lận</field>
        <field name="code">tai.chinh.ke.toan.canh.bao.gian.lan</field>
        <field name="prefix">CB</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Scheduled Action: Phát hiện gian lận tự động -->
    <record id="ir_cron_phat_hien_gian_lan" model="ir.cron">
        <field name="name">AI: Phát hiện gian lận tài chính (Hybrid)</field>
        <field name="model_id" ref="model_tai_chinh_ke_toan_canh_bao_gian_lan"/>
        <field name="state">code</field>
        <field name="code">model.phat_hien_gian_lan_tu_dong()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
    
    <!-- Scheduled Action: Huấn luyện lại ML model hàng tuần -->
    <record id="ir_cron_train_ml_model" model="ir.cron">
        <field name="name">AI: Huấn luyện lại ML model phát hiện gian lận</field>
        <field name="model_id" ref="model_tai_chinh_ke_toan_canh_bao_gian_lan"/>
        <field name="state">code</field>
        <field name="code">model.train_ml_model()</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
